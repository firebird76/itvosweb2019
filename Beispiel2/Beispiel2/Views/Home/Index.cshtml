@model IEnumerable<Person>

@{
  ViewData["Title"] = "Toll";
}

<h1>Meins!</h1>
<div>ist doch viel schöner...</div>

<h1>@ViewBag.Info</h1>

<h2>@ViewBag.Firma</h2>

<div>@Model.Count() Personen in der Liste</div>

<ul>
  @foreach (var person in Model)
  {
    <li>@person.Vorname @person.Nachname</li>
  }
</ul>

<div>
  <a href="/home/seite2" class="btn btn-danger">Seite 2</a>
  @Html.ActionLink("Seite 2", "seite2",null,null,new {@class="btn btn-success" })
  <a asp-action="seite2" class="btn btn-info">Seite 2</a>
</div>